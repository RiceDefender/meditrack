<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingBottom="10dp"
    android:layout_marginHorizontal="16dp"> <View
    android:id="@+id/prescription_background_view"
    android:layout_width="0dp"
    android:layout_height="110dp"
    android:background="@color/my_meds"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pictureMedicine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/placeholder_pic"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/prescription_background_view"
        app:layout_constraintStart_toStartOf="@+id/prescription_background_view"
        app:layout_constraintTop_toTopOf="@+id/prescription_background_view" />

    <TextView
        android:id="@+id/nameMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pictureMedicine"
        app:layout_constraintTop_toTopOf="@+id/prescription_background_view"
        tools:text="Medication Name" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/nameMedicine"
        app:layout_constraintTop_toBottomOf="@+id/nameMedicine" />

    <TextView
        android:id="@+id/details_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pictureMedicine"
        app:layout_constraintTop_toBottomOf="@+id/divider_line"
        tools:text="Daily: Tablet/Pill" />

    <ImageView
        android:id="@+id/deleteMedicineButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:contentDescription="delete"
        android:src="@drawable/delete_logo"
        app:layout_constraintEnd_toEndOf="@+id/prescription_background_view"
        app:layout_constraintTop_toTopOf="@+id/prescription_background_view" />

    <ImageView
        android:id="@+id/editMedicineButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:contentDescription="edit"
        android:src="@drawable/edit_logo"
        app:layout_constraintEnd_toStartOf="@+id/deleteMedicineButton"
        app:layout_constraintTop_toTopOf="@+id/prescription_background_view" />

    <HorizontalScrollView
        android:id="@+id/detailPrescriptionScrollView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bloc_details"
        android:padding="5dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pictureMedicine"
        app:layout_constraintTop_toBottomOf="@+id/prescription_background_view">

        <LinearLayout
            android:id="@+id/detailContentLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>