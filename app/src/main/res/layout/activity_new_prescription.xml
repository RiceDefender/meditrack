<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/your_prescription"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_placeholder"
        app:shapeAppearanceOverlay="@style/CircularShape"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/addPhotoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_add_a_photo_24"
        app:layout_constraintEnd_toStartOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        />

    <ImageView
        android:id="@+id/importPhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/import_photo"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />


    <TextView
        android:id="@+id/medicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_name"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/editMedicineName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/green_700"
        android:ems="10"
        android:textSize="18sp"
        android:hint="@string/e_g_paracetamol"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medicineName"
        android:padding="12dp"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_date"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/editMedicineName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/startDate"
        app:layout_constraintTop_toTopOf="@id/startDate"
        android:layout_marginStart="48dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:text="@string/ongoing_treatment"
        android:textColor="@color/green_700"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:trackTint="@color/green_700"
        android:thumbTint="@color/green_700"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:gravity="center"

         />

    <EditText
        android:id="@+id/editStartDate"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/date_calendar_placeholder"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@color/green_700"
        app:layout_constraintTop_toBottomOf="@id/switch1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editEndDate"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/date_calendar_placeholder"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@color/green_700"
        app:layout_constraintTop_toTopOf="@id/editStartDate"
        app:layout_constraintStart_toStartOf="@id/endDate" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editEndDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/typeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinnerMedicineType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/typeSelect"
        app:layout_constraintStart_toStartOf="@id/medicineName"

        app:layout_constraintWidth_percent="0.7"
        android:background="@color/green_700" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/spinnerMedicineType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/dosageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dosage"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/unitSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dosageSelect"
        app:layout_constraintStart_toStartOf="@id/endDate"/>

    <EditText
        android:id="@+id/editDosage"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_number"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:background="@color/green_700"
        app:layout_constraintTop_toBottomOf="@id/dosageSelect"
        app:layout_constraintStart_toStartOf="@id/medicineName"
        app:layout_constraintWidth_percent="0.4"/>

    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/green_700"

        app:layout_constraintBottom_toBottomOf="@id/editDosage"
        app:layout_constraintStart_toStartOf="@id/editEndDate"

        app:layout_constraintWidth_percent="0.2"
       />


    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editDosage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />


    <TextView
        android:id="@+id/frequencySelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:id="@+id/frequencyContainer"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_700"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/frequencySelect"
        app:layout_constraintStart_toStartOf="@id/dosageSelect">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/radioEveryDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every2"
                app:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/inputEveryDay"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:inputType="number"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_marginStart="4dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_s"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/radioEveryWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every2"
                app:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/inputEveryWeek"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_marginStart="4dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_s"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/radioEveryMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every2"
                app:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/inputEveryMonth"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_marginStart="4dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_s"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <RadioButton
                android:id="@+id/radioEveryYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every2"
                app:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/inputEveryYear"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:inputType="number"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:layout_marginStart="4dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_s"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:paddingStart="4dp"
                android:paddingEnd="10dp"/>
        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/timesOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/times_of_the_day"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/frequencyContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>










    <LinearLayout
        android:id="@+id/timesOfDayContainer"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_700"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/timesOfDay"
        app:layout_constraintStart_toStartOf="@id/dosageSelect">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/checkMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morning"
                android:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="12dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/checkAfternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afternoon"
                android:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="12dp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/checkEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evening"
                android:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="12dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/checkCustomTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_a_custom_time"
                android:buttonTint="@color/white"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/editHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hh_mm"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="22sp"
                android:background="@color/hour_green"
                android:textColor="@color/white"
                android:padding="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/confirmButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/confirm_button"
        app:layout_constraintTop_toBottomOf="@id/timesOfDayContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />








</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>