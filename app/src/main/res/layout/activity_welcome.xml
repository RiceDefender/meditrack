<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/hello"
            android:textColor="#00B400"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/menu"
            android:src="@drawable/menuicon"
            app:layout_constraintTop_toTopOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/we_are_happy_to_help_you_stay_on_track"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@id/textView2" />


        <!-- calendar on top -->
        <LinearLayout
            android:id="@+id/weekContainer"
            android:baselineAligned="false"
            android:padding="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView">


            <LinearLayout
                android:id="@+id/day1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day3"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day5"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day6"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/day7"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:orientation="vertical" />
        </LinearLayout>



        <TextView
            android:id="@+id/todayText"
            android:text="@string/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="@id/blocFirst"
            app:layout_constraintTop_toBottomOf="@id/weekContainer"
             />


    <!-- first example bloc of medicine (LATE = time missed) -->
        <View
            android:id="@+id/blocFirst"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@id/weekContainer"
            app:layout_constraintEnd_toEndOf="@id/weekContainer"
            android:layout_height="90dp"
            android:background="@drawable/bloc_late_bg"
            app:layout_constraintTop_toBottomOf="@id/todayText"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="13dp"
            android:layout_marginStart="36dp"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/pictureMedicine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/placeholder_pic"
            app:layout_constraintStart_toStartOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/todayText"
            android:src="@drawable/profile_placeholder"
            android:layout_marginTop="26dp"

            android:layout_marginStart="24dp"/>


        <TextView
            android:id="@+id/blocTimeOfDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/todayText"
            android:text="@string/morning"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"/>

        <TextView
            android:id="@+id/blocMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay"
            android:text="@string/paracetamol"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/blocDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/blocMedicineName"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay"
            android:text="@string/_1_pill"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="6dp"/>






        <!-- second example bloc of medicine (NORMAL /
        not taken yet but not late) -->
        <View
            android:id="@+id/blocSecond"
            android:layout_height="90dp"
            android:background="@drawable/bloc_normal_bg"
            app:layout_constraintStart_toStartOf="@id/weekContainer"
            app:layout_constraintEnd_toEndOf="@id/weekContainer"
            app:layout_constraintTop_toBottomOf="@id/blocFirst"
            android:layout_width="0dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="13dp"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/pictureMedicine2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/placeholder_pic"
            app:layout_constraintStart_toStartOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocFirst"
            android:src="@drawable/profile_placeholder"
            android:layout_marginTop="52dp"
            android:layout_marginStart="24dp"/>
            <!-- for the marginTop it's just 13 * 4 -->

        <TextView
            android:id="@+id/blocTimeOfDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocFirst"
            android:text="@string/example_12_30"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="52dp"/>

        <TextView
            android:id="@+id/blocMedicineName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay2"
            android:text="@string/medicine_2"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/blocDosage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/blocMedicineName"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay2"
            android:text="@string/_200_mg"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="6dp"/>







        <!-- third example bloc of medicine (Taken!! = what happens
        after u press the view bloc of the medicine (= like a button) ) -->
        <View
            android:id="@+id/blocThird"
            android:layout_height="90dp"
            android:background="@drawable/bloc_taken_bg"
            app:layout_constraintTop_toBottomOf="@id/blocSecond"
            app:layout_constraintStart_toStartOf="@id/weekContainer"
            app:layout_constraintEnd_toEndOf="@id/weekContainer"
            android:layout_width="0dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="13dp"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/pictureMedicine3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/placeholder_pic"
            app:layout_constraintStart_toStartOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocSecond"
            android:src="@drawable/profile_placeholder"
            android:layout_marginTop="52dp"
            android:layout_marginStart="24dp"/>
        <!-- for the marginTop it's just 13 * 4 -->

        <TextView
            android:id="@+id/blocTimeOfDay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocSecond"
            android:text="@string/_15_10_example"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="52dp"/>

        <TextView
            android:id="@+id/blocMedicineName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/todayText"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay3"
            android:text="@string/paracetamol"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/blocDosage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/blocMedicineName"
            app:layout_constraintTop_toBottomOf="@id/blocTimeOfDay3"
            android:text="@string/_1_pill"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="6dp"/>


        <!-- circle indicators -->
        <!-- here, when the circle is black it indicates that the time
         shown in the block is the nearest upcoming time-->

        <View
            android:id="@+id/circleFirst"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_red"
            app:layout_constraintStart_toStartOf="@id/blocFirst"
            app:layout_constraintBottom_toBottomOf="@id/blocFirst"
            app:layout_constraintTop_toTopOf="@id/blocFirst"
            android:layout_marginStart="-24dp"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/lineFirst"
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/circleFirst"
            app:layout_constraintStart_toStartOf="@id/circleFirst"
            app:layout_constraintEnd_toEndOf="@id/circleFirst"/>


        <View
            android:id="@+id/circleSecond"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_gray"
            app:layout_constraintStart_toStartOf="@id/blocSecond"
            app:layout_constraintBottom_toBottomOf="@id/blocSecond"
            app:layout_constraintTop_toTopOf="@id/blocSecond"
            android:layout_marginStart="-24dp"
            android:layout_marginTop="10dp"/>

        <View
            android:id="@+id/lineSecond"
            android:layout_width="2dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/circleSecond"
            app:layout_constraintStart_toStartOf="@id/circleSecond"
            app:layout_constraintEnd_toEndOf="@id/circleSecond"/>

        <!-- if it wasn't the nearest upcoming time,
        the circle would have been green -->
        <View
            android:id="@+id/circleThird"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_black"
            app:layout_constraintStart_toStartOf="@id/blocThird"
            app:layout_constraintBottom_toBottomOf="@id/blocThird"
            app:layout_constraintTop_toTopOf="@id/blocThird"
            android:layout_marginStart="-24dp"
            android:layout_marginTop="10dp"/>


        <!-- add a new prescription button -->
        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/dark_green"
            android:padding="12dp"
            android:text="@string/add_a_new_prescription"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blocThird"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!--drawer menu button -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/drawer_background"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:theme="@style/NavigationMenuStyle"
        />

</androidx.drawerlayout.widget.DrawerLayout>
